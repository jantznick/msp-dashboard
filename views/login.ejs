<%- include('partials/header') %>

<div class="max-w-md mx-auto py-12 px-4">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-[secondary]">Login</h1>
        <p class="mt-2 text-md text-gray-500">Access your account to view your requests.</p>
    </div>

    <% if (error) { %>
        <div class="mt-6 bg-red-100 border border-red-200 text-red-800 px-6 py-3 rounded-lg text-center" role="alert">
            <%= error %>
        </div>
    <% } %>

    <form action="/login" method="POST" class="mt-8 space-y-6 bg-white p-8 border border-gray-100 rounded-xl shadow-lg">
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input type="email" id="email" name="email" required class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
        </div>
        <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input type="password" id="password" name="password" required class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
        </div>
        <div class="flex items-center justify-between">
            <button
                type="submit"
                class="bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            >
                Sign In
            </button>
            <a
                href="/register"
                class="text-sm text-gray-600 hover:underline"
            >
                Don't have an account? Register here
            </a>
        </div>
    </form>
</div>

<%- include('partials/footer') %>