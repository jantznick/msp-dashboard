<%- include('partials/header') %>

<main class="container mx-auto mt-10 px-4">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-[secondary] mb-2">My Company's Applications</h1>
        <% if (company) { %>
            <p class="text-xl text-gray-600">Company: <span class="font-semibold"><%= company.name %></span></p>
        <% } %>
    </div>

    <% if (applications && applications.length > 0) { %>
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% applications.forEach(app => { %>
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                    <h2 class="text-2xl font-semibold text-gray-800"><%= app.name %></h2>
                    <!-- More application details can be added here in the future -->
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="mt-8 text-center bg-white p-8 rounded-lg shadow-md">
            <p class="text-gray-600">
                <% if (user && !company) { %>
                    You are not currently associated with a company. An administrator can assign you to one.
                <% } else { %>
                    There are no applications associated with your company yet.
                <% } %>
            </p>
        </div>
    <% } %>

    <% if (user && company && !isAdmin) { %>
        <div class="mt-12 bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Add a New Application</h2>
            <form action="/my-applications/add" method="POST">
                <div class="mb-4">
                    <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Application Name:</label>
                    <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
                </div>
                <button type="submit" class="bg-[--color-primary] hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Add Application
                </button>
            </form>
        </div>
    <% } %>
</main>

<%- include('partials/footer') %>
