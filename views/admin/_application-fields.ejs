<div class="mt-4">
    <label for="editName" class="block text-sm font-medium text-gray-700">Application Name</label>
    <input type="text" id="editName" name="name" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
</div>
<div class="mt-4">
    <label for="editCompanyId" class="block text-sm font-medium text-gray-700">Company</label>
    <select id="editCompanyId" name="companyId" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
        <% companies.forEach(company => { %>
            <option value="<%= company.id %>"><%= company.name %></option>
        <% }) %>
    </select>
</div>
