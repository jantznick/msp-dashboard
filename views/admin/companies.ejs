<%- include('../partials/header') %>

<main class="container mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Manage Companies</h1>

    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Add New Company</h2>
        <form action="/admin/companies" method="POST">
            <div class="mb-4">
                <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Company Name:</label>
                <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <button type="submit" class="bg-[--color-primary] hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Add Company
            </button>
        </form>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Existing Companies</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="py-2 px-4 border-b">ID</th>
                        <th class="py-2 px-4 border-b">Name</th>
                        <th class="py-2 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% companies.forEach(company => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="py-2 px-4 border-b text-center"><%= company.id %></td>
                            <td class="py-2 px-4 border-b"><%= company.name %></td>
                            <td class="py-2 px-4 border-b text-center">
                                <button onclick="openModal('<%= company.id %>', `<%= company.name %>`)" class="text-blue-500 hover:underline">Edit</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('_modal', { modalTitle: 'Edit Company', fieldsPartial: '_company-fields', item: null, companies: null }) %>

<script>
    const modal = document.getElementById('edit-modal');
    const form = document.getElementById('edit-form');
    const nameInput = document.getElementById('editName');

    function openModal(companyId, companyName) {
        form.action = `/admin/companies/${companyId}/update`;
        nameInput.value = companyName;
        modal.classList.remove('hidden');
    }

    function closeModal() {
        modal.classList.add('hidden');
    }
</script>

<%- include('../partials/footer') %>
