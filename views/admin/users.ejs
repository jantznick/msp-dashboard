<%- include('../partials/header') %>

<main class="container mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Manage Users</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">All Users</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="py-2 px-4 border-b">ID</th>
                        <th class="py-2 px-4 border-b">Email</th>
                        <th class="py-2 px-4 border-b">Company</th>
                        <th class="py-2 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="py-2 px-4 border-b text-center"><%= user.id %></td>
                            <td class="py-2 px-4 border-b"><%= user.email %></td>
                            <td class="py-2 px-4 border-b"><%= user.company ? user.company.name : 'N/A' %></td>
                            <td class="py-2 px-4 border-b text-center">
                                <button onclick="openModal('<%= user.id %>', '<%= user.companyId || '' %>')" class="text-blue-500 hover:underline">Edit</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('_modal', { modalTitle: 'Edit User', fieldsPartial: '_user-fields', item: null, companies: companies }) %>

<script>
    const modal = document.getElementById('edit-modal');
    const form = document.getElementById('edit-form');
    const companySelect = document.getElementById('companyId');

    function openModal(userId, companyId) {
        form.action = `/admin/users/${userId}/update`;
        companySelect.value = companyId;
        modal.classList.remove('hidden');
    }

    function closeModal() {
        modal.classList.add('hidden');
    }
</script>

<%- include('../partials/footer') %>
