<div class="mt-2">
    <label for="companyId" class="block text-sm font-medium text-gray-700">Assign Company</label>
    <select id="companyId" name="companyId" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
        <option value="">No Company</option>
        <% companies.forEach(company => { %>
            <option value="<%= company.id %>"><%= company.name %></option>
        <% }) %>
    </select>
</div>
