<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppSec Catalog | <%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-[light-gray] font-sans text-[dark-gray]">
    <nav class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <a href="/" class="text-2xl font-bold text-primary">AppSec Catalog</a>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-center space-x-6">
                        <!-- Primary Navbar items -->
                        <div class="hidden md:flex items-center space-x-1">
                            <a href="/" class="py-5 px-3 text-gray-700 hover:text-gray-900">Home</a>

                            <!-- Intake Dropdown -->
                            <div class="relative group">
                                <button class="py-5 px-3 text-gray-700 hover:text-gray-900 flex items-center">
                                    <span>Intake Forms</span>
                                    <svg class="w-4 h-4 ml-1 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 12l-5-5 1.41-1.41L10 9.17l3.59-3.58L15 7l-5 5z"/></svg>
                                </button>
                                <div class="absolute z-10 hidden bg-white shadow-lg rounded-md mt-0 w-48 group-hover:block">
                                    <a href="/intake/manager" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Manager Intake</a>
                                    <% if (user && user.companyId || isAdmin) { %>
                                    <a href="/intake/application" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Application Intake</a>
                                    <% } %>
                                </div>
                            </div>

                             <!-- Request Dropdown -->
                            <div class="relative group">
                                <button class="py-5 px-3 text-gray-700 hover:text-gray-900 flex items-center">
                                    <span>Request Tools</span>
                                    <svg class="w-4 h-4 ml-1 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M10 12l-5-5 1.41-1.41L10 9.17l3.59-3.58L15 7l-5 5z"/></svg>
                                </button>
                                <div class="absolute z-10 hidden bg-white shadow-lg rounded-md mt-0 w-56 group-hover:block">
                                    <a href="/request" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Request a New Tool</a>
                                    <a href="/add-users" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Add Users to Existing Tool</a>
                                </div>
                            </div>

                            <% if (user) { %>
                                <a href="/my-requests" class="py-5 px-3 text-gray-700 hover:text-gray-900">My Requests</a>
                                <a href="/my-applications" class="py-5 px-3 text-gray-700 hover:text-gray-900">My Applications</a>
                                <% if (isAdmin) { %>
                                    <div class="relative inline-block text-left">
                                        <div>
                                            <button type="button" class="inline-flex justify-center w-full rounded-md px-4 py-2 bg-white text-sm font-medium text-gray-500 hover:text-primary focus:outline-none" id="admin-menu" aria-haspopup="true" aria-expanded="true">
                                                Admin
                                                <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                                </svg>
                                            </button>
                                        </div>
                                        <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden" id="admin-menu-dropdown">
                                            <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="admin-menu">
                                                <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Requests</a>
                                                <a href="/admin/companies" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Companies</a>
                                                <a href="/admin/applications" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Applications</a>
                                                <a href="/admin/users" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Users</a>
                                                <a href="/admin/unauthorized-changes" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Change Log</a>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                <a href="/logout" class="py-2 px-4 font-medium text-white bg-blue-700 rounded-md hover:bg-blue-800">Logout</a>
                            <% } else { %>
                                <a href="/login" class="py-2 px-4 font-medium text-white bg-blue-700 rounded-md hover:bg-blue-800">Login / Register</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <main class="max-w-7xl mx-auto py-10 sm:px-6 lg:px-8">
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const menuButton = document.getElementById('admin-menu');
            const dropdown = document.getElementById('admin-menu-dropdown');

            if (menuButton) {
                menuButton.addEventListener('click', function() {
                    dropdown.classList.toggle('hidden');
                });

                document.addEventListener('click', function(event) {
                    if (!menuButton.contains(event.target) && !dropdown.contains(event.target)) {
                        dropdown.classList.add('hidden');
                    }
                });
            }
        });
    </script>