<%- include('partials/header') %>

<div class="bg-white">
    <!-- Hero Section -->
    <div class="text-center py-16 px-4 bg-gray-50">
        <h1 class="text-4xl font-bold text-gray-800">A Strategic Partner in Security</h1>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">We integrate security into your development lifecycle, turning potential roadblocks into accelerators for innovation.</p>
    </div>

    <!-- Process Section -->
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-gray-800">Our Approach</h2>
            <p class="mt-4 text-lg text-gray-600">We follow a proven lifecycle to mature your security posture.</p>
        </div>
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800">1. Onboard & Integrate</h3>
                <p class="mt-2 text-gray-600">We start by understanding your needs and integrating automated security tools directly into your workflow.</p>
            </div>
            <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800">2. Assess & Remediate</h3>
                <p class="mt-2 text-gray-600">Through continuous scanning and in-depth testing, we identify vulnerabilities and provide actionable guidance.</p>
            </div>
            <div class="p-4">
                <h3 class="text-xl font-semibold text-gray-800">3. Mature & Evolve</h3>
                <p class="mt-2 text-gray-600">We work with you to measure progress and evolve your security practices over time.</p>
            </div>
        </div>
        <div class="text-center mt-12">
            <a href="/docs/program-overview" class="bg-blue-600 text-white font-bold py-3 px-8 rounded-lg hover:bg-blue-700 transition-colors text-lg">Explore the Program</a>
        </div>
    </div>

    <!-- Technology Stack Section -->
    <div class="bg-gray-50">
        <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-bold text-gray-800">Our Technology Stack</h2>
                <p class="mt-4 text-lg text-gray-600">We leverage a suite of industry-leading tools to protect our applications.</p>
            </div>
            <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-4">
                <% products.forEach(product => { %>
                    <a href="/docs/products/<%= product.slug %>" class="block bg-white border border-gray-200 rounded-lg p-6 text-center transform hover:shadow-xl transition-shadow duration-300">
                        <h3 class="text-xl font-semibold text-gray-800"><%= product.title %></h3>
                        <p class="mt-2 text-gray-600"><%= product.summary %></p>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>